{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/zenbakiak/pdf2audio/schemas/job.schema.json",
  "title": "pdf2audio Job Manifest",
  "type": "object",
  "required": ["inputs", "outputs", "params", "artifacts"],
  "properties": {
    "inputs": {
      "type": "object",
      "required": ["pdf"],
      "properties": {
        "pdf": {"type": "string"}
      },
      "additionalProperties": false
    },
    "outputs": {
      "type": "object",
      "required": ["mp3"],
      "properties": {
        "mp3": {"type": "string"}
      },
      "additionalProperties": false
    },
    "params": {
      "type": "object",
      "required": ["lang", "tts_provider", "use_ssml", "summarize", "llm"],
      "properties": {
        "lang": {"type": "string"},
        "tts_provider": {"type": "string", "enum": ["gtts", "openai", "aws", "google"]},
        "llm_provider": {"type": ["string", "null"], "enum": ["openai", "gemini", null]},
        "use_ssml": {"type": "boolean"},
        "summarize": {"type": "boolean"},
        "llm": {
          "type": "object",
          "required": ["chunk_strategy", "max_chunk_chars"],
          "properties": {
            "chunk_strategy": {"type": "string", "enum": ["paragraph_sentence_word", "sentence_word"]},
            "max_chunk_chars": {"type": "integer", "minimum": 1}
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "artifacts": {
      "type": "object",
      "required": ["artifact_dir", "raw_text", "chunks_dir", "chunks"],
      "properties": {
        "artifact_dir": {"type": "string"},
        "raw_text": {"type": "string"},
        "cleaned_text": {"type": ["string", "null"]},
        "summary_text": {"type": ["string", "null"]},
        "ssml_text": {"type": ["string", "null"]},
        "chunks_dir": {"type": "string"},
        "chunks": {"type": "array", "items": {"type": "string"}}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
